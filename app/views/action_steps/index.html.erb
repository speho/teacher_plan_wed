<div class="page-header">
  <h1>
    Action steps
    <a href="/action_steps/new" class="btn btn-lg btn-success">New Action step</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>State</th>
        <th>Target date</th>
        <th>User</th>
        <th>Resources</th>
        <th>Success measurements</th>
        <th>Goal</th>
        <th>Actions</th>
      </tr>

      <% @action_steps.each do |action_step| %>
      <tr>
        <td><%= action_step.state %></td>
        <td><%= action_step.target_date %></td>
        <td>
          <% if action_step.point_man.present? %>
            <a href="/users/<%= action_step.point_man.id %>">
              <%= action_step.point_man.email %>
            </a>
          <% end %>
        </td>
        <td><%= action_step.resources %></td>
        <td><%= action_step.success_measurements %></td>
        <td>
          <% if action_step.goal.present? %>
            <a href="/goals/<%= action_step.goal.id %>">
              <%= action_step.goal.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/action_steps/<%= action_step.id %>" class="btn btn-primary">Show</a>
          <a href="/action_steps/<%= action_step.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_action_step/<%= action_step.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @action_steps, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
